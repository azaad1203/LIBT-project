<?xml version="1.0" encoding="ISO-8859-1" ?>

<element>
	<web-app xmlns="http://java.sun.com/xml/ns/j2ee"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
		version="2.4">

		<display-name>task3</display-name>
		<welcome-file-list>
			<welcome-file>index.html</welcome-file>
		</welcome-file-list>
		<filter>
			<filter-name>HtmlCodeFilter</filter-name>
			<filter-class>
				com.task3.security.HtmlCodeFilter
			</filter-class>
		</filter>
		<filter>
			<filter-name>LoginHomePageFilter</filter-name>
			<filter-class>
				com.task3.redirect.LoginHomePageFilter
			</filter-class>
		</filter>
		<filter>
			<filter-name>ForwardRequestFilter</filter-name>
			<filter-class>
				com.task3.redirect.ForwardRequestFilter
			</filter-class>
		</filter>
		<filter-mapping>
			<filter-name>HtmlCodeFilter</filter-name>
			<url-pattern>/*</url-pattern>
		</filter-mapping>
		<filter-mapping>
			<filter-name>LoginHomePageFilter</filter-name>
			<url-pattern>/*</url-pattern>
		</filter-mapping>
		<filter-mapping>
			<filter-name>ForwardRequestFilter</filter-name>
			<url-pattern>/*</url-pattern>
		</filter-mapping>
		<servlet>
			<servlet-name>FrontController</servlet-name>
			<servlet-class>
				com.task3.controller.FrontController
			</servlet-class>
		</servlet>
		<servlet>
			<servlet-name>ErrorHandle</servlet-name>
			<servlet-class>
				com.task3.exception.ErrorHandle
			</servlet-class>
		</servlet>
		<servlet-mapping>
			<servlet-name>FrontController</servlet-name>
			<url-pattern>/control/*</url-pattern>
		</servlet-mapping>
		<servlet-mapping>
			<servlet-name>ErrorHandle</servlet-name>
			<url-pattern>/error/*</url-pattern>
		</servlet-mapping>
	</web-app>
</element>
